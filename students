<?php
$studentsReport = [
  'Алеша' => 5.0,
  'ПиВася' => 1,
  'ДядяПетя' => 2.5,
  'ТётяМотя' => 5.0,
  'КрепкийХозяйственник' => 3.0,
  'БаракОбэми' => 0,
  'Сярожа' => 5,
  'Лаптина' => 3.5,
  'Сыроедова' => 2.5,
  'Шмыгуль' => 4
];
$findBestStudents = function ($arr) {
	$moreThanFourArr = [];
	foreach ($arr as $studentName => $rating) {
		if ($rating > 4) {
			$moreThanFourArr[] = $studentName;
		} else {
			continue;
		}
	}
	return $moreThanFourArr;
};
//print_r ($findBestStudents($studentsReport));
$sort = function ($arr) {
	if (count($arr) < 2) {
		return $arr;
	} else {
		$element = $arr['ТётяМотя'];
		$less = [];
		$greter = [];
		foreach ($arr as $rating) {
			if ($rating <= $element){
				$less[] = $rating;
			} else {
				$greter[] = $rating;
			}
		}
		return array_merge($sort($less), [$element], $sort($greter));
	}
};
function showBestStudents($srt, $fBS, $sR) {
$sortArray = $srt($sR);
$result = $fBS($sortArray);
return $result;
}
print_r (showBestStudents($sort, $findBestStudents, $studentsReport));
